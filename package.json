{
    "name": "vscode-gpt-automate",
    "displayName": "VSCode GPT Automate",
    "description": "Automate tasks by prompting ChatGPT to interact with your workspace.",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.73.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:vscode-gpt-automate.prompt"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-gpt-automate.prompt",
                "title": "GPT Automate Prompt"
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.73.0",
        "@vscode/test-electron": "^2.2.3",
        "eslint": "^8.34.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "openai": "^3.2.1"
    }
}
