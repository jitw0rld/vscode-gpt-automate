{
    "name": "vscode-gpt-automate",
    "displayName": "VSCode GPT Automate",
    "description": "Automate tasks by prompting ChatGPT to interact with your workspace.",
    "version": "0.4.0",
    "author": "Ethan Rettinger",
    "publisher": "ethanrjs",
    "repository": {
        "type": "git",
        "url": "https://github.com/jitw0rld/vscode-gpt-automate.git"
    },
    "engines": {
        "vscode": "^1.73.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:vscode-gpt-automate.prompt",
        "onView:gptAutomate"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-gpt-automate.prompt",
                "title": "GPT Automate Prompt"
            }
        ],
        "configuration": {
            "title": "GPT Automate",
            "properties": {
                "vscode-gpt-automate.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "VSCode GPT Automate API key"
                }
            }
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.73.0",
        "@vscode/test-electron": "^2.2.3",
        "eslint": "^8.34.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "openai": "^3.2.1",
        "request": "^2.88.2"
    }
}
